<!-- 	</beans:bean>	 -->
	
<!-- 	<beans:bean class="com.munggu.org.B"> -->
<!-- 	</beans:bean>	 -->
	
	
	
	<context:component-scan base-package="com.jeong.org" />
	
	
	
</beans:beans>
